// Модели для БД

generator client {
    provider = "prisma-client-js"
}

// SQLite3: sqlite | file:../path/to/main.db
datasource db {
    provider = "sqlite"
    url      = "file:../../db/sqlite3.db"
}

model User {
    id           Int         @id @default(autoincrement())
    login        String      @unique
    password     String
    notes        Note[]
    laboratories Laboratory[]
    createdAt    DateTime    @default(now())
    updatedAt    DateTime    @default(now())

    @@map("users")
}

model Note {
    id         Int      @id @default(autoincrement())
    title      String
    content    String
    slug       String   @unique
    published  Boolean  @default(true)
    user       User     @relation(fields: [userId], references: [id])
    userId     Int
    category   Category @relation(fields: [categoryId], references: [id])
    categoryId Int
    createdAt  DateTime @default(now())
    updatedAt  DateTime @default(now())

    @@map("notes")
}

model Category {
    id    Int    @id @default(autoincrement())
    name  String
    slug  String @unique
    notes Note[]

    @@map("categories")
}

model Laboratory {
    id           Int      @id @default(autoincrement())
    title        String
    content      String
    slug         String   @unique
    previewText  String?
    previewImage String?
    published    Boolean  @default(true)
    user         User     @relation(fields: [userId], references: [id])
    userId       Int
    createdAt    DateTime @default(now())
    updatedAt    DateTime @default(now())

    @@map("laboratories")
}

model JwtAccessToken {
    id         Int      @id @default(autoincrement())
    jti        String
    fingerprint String
    expires    DateTime

    @@map("jwt_access_tokens")
}

model JwtRefreshToken {
    id         Int      @id @default(autoincrement())
    jti        String
    fingerprint String
    expires    DateTime

    @@map("jwt_refresh_tokens")
}
